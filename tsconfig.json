{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react",
        "rootDir": "src",
        "paths": {
            "@/*": ["*"]
        },
        "baseUrl": "src",
        "allowJs": true,
        "strict": false,
        "resolveJsonModule": true,
    },
    "include": [
        "src",
        "src/custom.d.ts"
    ]
}

